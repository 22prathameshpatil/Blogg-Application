      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-blue-400">Bloggify</a>

      <!-- Navigation Links -->
      <div class="flex space-x-6 text-lg">
        <a href="/" class="hover:text-blue-400 transition">Home</a>
        <% if (locals.user) { %>
        <a href="/newblog" class="hover:text-blue-400 transition">Add Blog</a>
        <% } %>

